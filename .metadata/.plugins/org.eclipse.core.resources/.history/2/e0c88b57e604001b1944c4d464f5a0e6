        ],
        200 => [
            'idDpt' => 10,
            'nombre' => 'Ana',
            'apellido' => 'Garcia'
        ]
    ]
];

while(!isEnd) {
    switch(isMenu) {
        case 0:
            getMenuPrincipal();
            fscanf(STDIN, "%d\n", $isMenu);
            break;
        case 1:
            getMenuDepartamentos();
            fscanf(STDIN, "%d\n", $isSubmenu);
            $isMenu = 1;
            switch(){
                case 1:
                    //mostrar departamentos
                    break;
                case 2:
                    //mostrar departamento by id
                    break;
                case 3:
                    //alta departamento
                    break;
                case 4:
                    //edit departamento
                    break;
                case 5:
                    //delete departamento
                    break;
                case 6:
                    //reset
                    $isMenu=0;
                    break;
                default:
                    //reset
                    $isMenu=0;
                    break;
            }
            break;
        case 2:
            getMenuEmpleados();
            fscanf(STDIN, "%d\n", $isSubmenu);
            $isMenu = 2;
            switch(){
                case 1:
                    //mostrar empleados
                    break;
                case 2:
                    //mostar empleado by id
                    break;
                case 3:
                    //alta empleado
                    break;
                case 4:
                    //edit empleado
                    break;
                case 5:
                    //delete empleado
                    break;
