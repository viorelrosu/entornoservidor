<?php
$fecha = strtotime("1978/10/04") ;

$segundos = date("s",$fecha);
$minutos = date("i",$fecha);
$horas = date("H",$fecha);

$dias = $horas/24;
$meses = $dias/30;
$anios = $meses/12;

echo $segundos;

echo "Han transcurrido $anios años, $meses meses, $dias dias, $horas horas, $minutos minutos y $segundos segundos desde $fecha";