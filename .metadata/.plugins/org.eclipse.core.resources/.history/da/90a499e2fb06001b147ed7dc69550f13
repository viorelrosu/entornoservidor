<?php
$fecha = strtotime("1978/10/04") ;
$now = time();
$diff = $now - $fecha;
echo $fecha;

$segundos = date("s",$diff);
$minutos = date("i",$diff);
$horas = date("H",$diff);

$dias = (int)$horas/24;
$meses = $dias/30;
$anios = $meses/12;

echo "\n";
echo $segundos;
echo "\n";
echo "Han transcurrido $anios años, $meses meses, $dias dias, $horas horas, $minutos minutos y $segundos segundos desde $fecha";