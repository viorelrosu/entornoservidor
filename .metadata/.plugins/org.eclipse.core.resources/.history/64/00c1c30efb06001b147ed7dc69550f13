<?php
$fecha = "1978/10/04";

$segundos = date("s",strtotime($fecha));
$minutos = date("i",strtotime($fecha));
$horas = date("H",strtotime($fecha));

$dias = $horas/24;
$meses = $dias/30;
$anios = $meses/12;

echo $segundos;

echo "Han transcurrido $anios años, $meses meses, $dias dias, $horas horas, $minutos minutos y $segundos segundos desde $fecha";