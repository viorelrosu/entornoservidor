<?php
echo "Introduce día: ";
fscanf(STDIN,"%d\n",$dia);

echo "Introduce mes: ";
fscanf(STDIN,"%d\n",$mes);

echo "Introduce año: ";
fscanf(STDIN,"%d\n",$anyo);

$segHastaHoy = time();
$segHastaFecha = strtotime("$anyo/$mes/$dia"); //mktime(0,0,0,$mes, $dia, $anyo);
$segTransc = $segHastaHoy - $segHastaFecha;

$segEnUnAnyo = 31536000;

$segundos = date("s",$segTransc);
$minutos = date("i",$segTransc);
$horas = date("H",$segTransc);

$anios = (int)($segTransc/$segEnUnAnyo);

$segEnUnMes = 2592000;
$solucion = $anios % $segEnUnAnyo;
$meses = (int) ($solucion/$segEnUnMes);

$segEnUnDia = 86400;
$dias = (int) ($solucion/$segEnUnDia);
$solucion = $solucion % $segEnUnDia;

$segEnUnaHora = 3600;
$horas = (int) ($solucion/$segEnUnaHora);
$solucion = $solucion % $segEnUnaHora;



echo "\n";
echo $dias;
echo "\n";
echo "Han transcurrido $anios años, $meses meses, $dias dias, $horas horas, $minutos minutos y $segundos segundos desde $dia/$mes/$anyo";