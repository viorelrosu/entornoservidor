<?php
echo "Introduce día: ";
fscanf(STDIN,"%d\n",$dia);

echo "Introduce mes: ";
fscanf(STDIN,"%d\n",$mes);

echo "Introduce año: ";
fscanf(STDIN,"%d\n",$anyo);

$segHastaHoy = time();
$segHastaFecha = strtotime("$anyo/$mes/$dia"); //mktime(0,0,0,$mes, $dia, $anyo);
$segTransc = $segHastaHoy - $segHastaFecha;
$now = time();
$diff = $now - $fecha;
echo $fecha;

$segundos = date("s",$diff);
$minutos = date("i",$diff);
$horas = date("H",$diff);

$dias = (int)($horas/24);
$meses = (int)($dias/30);
$anios = (int)($meses/12);

echo "\n";
echo $dias;
echo "\n";
echo "Han transcurrido $anios años, $meses meses, $dias dias, $horas horas, $minutos minutos y $segundos segundos desde $fecha";